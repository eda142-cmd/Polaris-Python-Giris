from datetime import datetime

def main():
    tarih_str = input("Vize tarihini girin (GG.AA.YYYY SS:DD formatında): ")
    try:
        # Metni tarih objesine çeviriyoruz
        vize_vakti = datetime.strptime(tarih_str, "%d.%m.%Y %H:%M")
        simdi = datetime.now()
        
        kalan_sure = vize_vakti - simdi
        
        if kalan_sure.total_seconds() < 0:
            print("Sınav çoktan geçmiş! ")
        else:
            gun = kalan_sure.days
            saat = kalan_sure.seconds // 3600
            print(f"Sınava {gun} gün, {saat} saat kaldı. Başarılar! ")
            
    except ValueError:
        print("Hatalı format! Lütfen örneğe uygun girin: 15.11.2025 09:30")

main()
